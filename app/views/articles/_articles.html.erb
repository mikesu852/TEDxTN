<div class="articles-part">
    <div class="articles-items">
        <% @article.each do |article| %>
            <div class="articles-item">
                <%= link_to image_tag(article.thumb.url(:square),:class => 'articles-item-img'), article %>
                <div class="articles-item-title">
                    <span class="h3"><%= link_to article.title , article %></span><br><br>
                    <span class="h4"><%= article.summary %></span>
                </div>
            </div>
        <% end %>
        <% if @article.count <= 6 %>
         <%= link_to '更多文章', columns_path , :id => 'more-button' ,:class => 'h3' %>
        <% end %>
    </div>
</div>

<script type="text/javascript">

  $(document).ready(function(){
    $('.articles-item').hover(function(){
      $('.articles-item-title',this).animate({
          opacity:1,
          bottom: "0",
      },500);
    },function(){
      $('.articles-item-title',this).animate({
          opacity:0,
          bottom: "-20px",
      },500);
    });
  })
</script>

