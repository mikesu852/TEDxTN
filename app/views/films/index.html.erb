<div class="search">
  <%= form_tag films_path,:class =>'form-horizontal' , method: :get do %>
  <div class="form-group">
    <div class="col-md-12">
      <div class="form-group row">
        <label class="col-md-6">分類</label>
        <label class="col-md-6" id="label-activity-desktop">活動</label>
        <div class="col-md-6">
            <%= select_tag "category", options_from_collection_for_select(Film.all, "category", "category"), :class =>"form-control" %>
        </div>
        <label class="col-md-6" id="label-activity-mobile">活動</label>
        <div class="col-md-6">
          <%= select_tag "event", options_from_collection_for_select(Film.all, "event", "event"), :class =>"form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-12">關鍵字</label>
    <div class="col-md-12">
      <%= text_field_tag :keyword, params[:keyword], :class =>"form-control", placeholder: "關鍵字" %>
    </div>
  </div>
   <input name="commit" type="submit" value="搜尋" class="btn btn-default"/>
   <% if params[:commit].present? %>
    <%= link_to "取消搜尋" , films_path , :class => "btn btn-default" %>
   <% end %>
  <% end %>
</div>
<div class="films-part">
  <div class="films-items">
    <% @films.each do |film| %>
    <div class="films-item">
      <%= embed(film.url) %>
      <span class="h2"><%= film.title  %></span><br><br>
      <span class="h3"><%= film.summary %></span>
    </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    var film = $('.film');
    film.each(function () {
      var w = $(this).width();
      $(this).height(w * 0.75);
    })
  })
</script>
