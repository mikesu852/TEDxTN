<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= image_tag @user.avatar.url(:thumb) , :class => "avatar" %>
			<table class="table">
				<tr>
					<th>用戶名</th>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<th>Email</th>
					<td><%= @user.email %></td>
				</tr>
				<tr>
					<th>個人介紹</th>
					<td><%= @user.profile %></td>
				</tr>
			</table>
			<% if current_user %>
				<% if current_user.id == @user.id %>
				<div class="text-center">
					<%= link_to '編輯個人資料' , edit_user_path , :class => 'btn btn-default' %>
					<%= link_to '刪除帳號' , user_path(current_user) , :class => 'btn btn-default', method: :delete, data: { confirm: "確定刪除嗎?" } %>
				</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
<div class="block"></div>
