<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1 class="text-center h1">個人資料</h1>
			<%= image_tag(@user.avatar.url(:thumb),:class => "avatar")%>
			<%= form_for @user, :html => {:class => "form"} do |f| %>
			  <%= f.label :avatar, '大頭照' %>
			  <%= f.file_field :avatar,:class =>"form-control" %><br>
			  <%= f.label :name, '用戶名' %>
			  <%= f.text_field :name, :class =>"form-control"  %><br>
			  <%= f.label :email, 'Email' %>
			  <%= f.text_field :email, :class =>"form-control"  %><br>
			  <%= f.label :profile, '個人簡介' %>
			  <%= f.text_area :profile, :class =>"form-control"  %><br>
			  <%= f.submit '更新', :class =>"btn btn-default" %>
			<% end %>
			<div class="block" ></div>
		</div>
	</div>
</div>